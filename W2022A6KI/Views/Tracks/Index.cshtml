@model IEnumerable<W2022A6KI.Models.TrackBaseViewModel>

@{
    ViewBag.Title = "Tracks";
}

<h2>Tracks</h2>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Composers)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Genre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Albums)
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Composers)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre)
            </td>
            <td>
               @foreach (var album in item.Albums)
                {
                    <div>@Html.DisplayFor(modelItem => album.Name)</div>
                }
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.Id })
               @if(User.IsInRole("Clerk"))
                {
                    <span>
                        | @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </span>
                }
            </td>
        </tr>
    }

</table>
