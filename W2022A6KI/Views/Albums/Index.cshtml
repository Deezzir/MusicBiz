@model IEnumerable<W2022A6KI.Models.AlbumBaseViewModel>

@{
    ViewBag.Title = "Albums";
}

<h2>Albums</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ReleaseDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UrlAlbum)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Genre)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.Coordinator)
        </th>*@
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseDate)
            </td>
            <td>
                <img src="@item.UrlAlbum" class="img-responsive img-rounded" style="width:200px;height:auto;" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.Coordinator)
            </td>*@
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.Id })
            </td>
        </tr>
    }

</table>
