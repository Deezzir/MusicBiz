@model IEnumerable<W2022A6KI.Models.ArtistBaseViewModel>

@{
    ViewBag.Title = "Artists";
}

<h2>Artists</h2>

@if (User.IsInRole("Executive"))
{
    <p>
        @Html.ActionLink("Add Artist", "Create")
    </p>
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BirthName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BirthOrStartDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UrlArtist)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Genre)
        </th>
        <th></th>
        @*<th>
            @Html.DisplayNameFor(model => model.Executive)
        </th>*@
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BirthName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BirthOrStartDate)
            </td>
            <td>
                @*@Html.DisplayFor(modelItem => item.UrlArtist)*@
                <img src="@item.UrlArtist" class="img-responsive img-rounded" style="width:200px;height:auto;" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.Executive)
            </td>*@
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.Id })
            </td>
        </tr>
    }

</table>
